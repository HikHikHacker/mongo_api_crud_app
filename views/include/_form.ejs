<!--form handling-->
<form action="/api/users" method="POST" id="add_user" class="row mb-3 align-items-center justify-content-center">
    <div class="card" style="width: 75%;">
        <img src="https://images.unsplash.com/photo-1622547748225-3fc4abd2cca0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80" class="card-img-top" alt="..." style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">User Details</h5>
            <p class="card-text">Input User Information</p>

            <div class="row">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control border-0" id="floatingInputGrid" name="name" placeholder="name@example.com" />
                        <label for="floatingInputGrid">Name</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input name="email" type="email" class="form-control border-0" id="floatingInputGrid" placeholder="name@example.com" />
                        <label for="floatingInputGrid">Email address</label>
                    </div>
                </div>
            </div>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>


        <div>
            <div class="btn secondary"></div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male" />
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female" />
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
            <div class="form-check form-check-inline form-switch">
                <input class="form-check-input" type="checkbox" id="puactinaci" value="Inactive">
                <label name="yesnos" id="yesnos" class="form-check-label" for="puactinaci">Inactive</label>
                <input id="chstatus" type="hidden" name="status" />


            </div>
            <div class="">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>


</form>
<!--form handling-->